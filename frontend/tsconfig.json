{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "strict": true,
    "module": "esnext",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["cypress"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "cypress/**/*"]
}
